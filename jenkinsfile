pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'maven:3.8.6-openjdk-11'
                }
            }
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }



        stage('JMeter Tests') {
            
            steps {
                script {
                    sh 'mvn clean verify'
                    //sh 'mvn jmeter:configure jmeter:gui'
                    //sh 'mvn jmeter:jmeter'
                }
            }
        }
    }
}
